@model IEnumerable<Sydenham_Library_System.Models.RESERVATIONS>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Online Reservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservedby)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservedbyphone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Createddate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRODUCTS)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Reservedby)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reservedbyphone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Createddate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRODUCTS.TITLE)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
